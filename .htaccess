# redirect user to page according to default browser language settings

RewriteEngine on

RewriteCond %{HTTP:Accept-Language} !pl [NC]
RedirectMatch ^/$ /en/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} pl [NC]
RedirectMatch ^/$ /pl/ [L,R=301]



